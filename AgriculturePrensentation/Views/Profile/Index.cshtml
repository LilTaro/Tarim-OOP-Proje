@model AgriculturePrensentation.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Mail Adresi</label>
                    <input type="text" class="form-control" asp-for="Mail">
                </div>
                <div class="form-group">
                    <label>Telefon Numarası</label>
                    <input type="text" class="form-control" asp-for="Phone">
                </div>
                <div class="form-group">
                    <label>Yeni Şifre</label>
                    <input type="text" class="form-control" asp-for="password">
                </div>
                <div class="form-group">
                    <label>Yeni Şifre Tekrar</label>
                    <input type="text" class="form-control" asp-for="confirmPasword">
                </div>
                <button type="submit" class="btn btn-outline-success me-2">Düzenle</button>
            </form>
        </div>
    </div>
</div>
