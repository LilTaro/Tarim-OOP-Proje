@model AgriculturePrensentation.Models.ServiceAddViewModel
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Hizmet Girişi</h1>

<form method="post">
    <div class="form-group">
    @Html.Label("Başlık")
    <span asp-validation-for="ServiceTitle" class="text-danger"></span>
        <input type="text" asp-for="ServiceTitle" class="form-control" />
    @Html.Label("Açıklama")
    <span asp-validation-for="ServiceDesc" class="text-danger"></span>
        <input type="text" asp-for="ServiceDesc" class="form-control" />
    @Html.Label("Resim")
    <span asp-validation-for="ServiceImage" class="text-danger"></span>
        <input type="text" asp-for="ServiceImage" class="form-control" />
	</div>
    <button class="btn btn-success">Hizmet Ekle</button>
</form>