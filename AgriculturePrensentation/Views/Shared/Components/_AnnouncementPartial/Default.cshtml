@using EntityLayer.Concrete
@model List<Announcement>
<div class="blog" id="blog">
	<div class="container">
		<h3 class="tittle">Son Duyurular</h3>
		<p class="heading-btm-w3ls">Çiftliklerimiz ve Tarlalarımızla İlgili Son Haberler.</p>
		@foreach (var item in Model)
		{
		<div class="blog-grid-w3-agileits">
			<div class="@item.ImageUrl">
				<a href="#" data-toggle="modal" data-target="#myModal2"></a>
			</div>
			<div class=" col-md-5 blog-info-w3layouts">
				<h6> <a>@item.Title</a></h6>
				<div class="inner-info">
					<a class="blog-text-w3ls bar">@item.Title</a><span>@item.Date.ToShortDateString()</span>
					<p class="para-w3-agileits">@item.Description</p>
				</div>
			</div>
			<div class="clearfix"></div>
		</div>
		}
	</div>
</div>